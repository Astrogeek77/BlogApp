<%- include("partials/header") %>

<div class="ui main text container segment placeholder">
	<div class="ui huge header centered">
		EDIT <%= blog.title %>
	</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=put" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label>Graphics url</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Post Content</label>
			<textarea name="blog[body]"><%= blog.body %></textarea>
		</div>
		<button class="ui teal big basic button" type="submit">
			<i class="upload icon"></i> UPDATE
		</button>
	</form>
</div>

<%- include("partials/footer") %>