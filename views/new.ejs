<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header centered">
		Add New Blog
	</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" required>
		</div>
		<div class="field">
			<label>Graphics url</label>
			<input type="text" name="blog[image]" placeholder="image" required>
		</div>
		<div class="field">
			<label>Post Content</label>
			<textarea name="blog[body]">Add your Post Content!</textarea>
		</div>
		<button class="ui teal big basic button" type="submit">
			<i class="save icon"></i> SAVE
		</button>
	</form>
</div>

<%- include("partials/footer") %>